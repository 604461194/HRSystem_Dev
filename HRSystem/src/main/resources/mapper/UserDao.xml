<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--设置为UserDao接口方法提供sql语句配置-->
<mapper namespace="com.kevin.HRSystem.dao.UserDao">

    <insert id="save" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO test_user(email, password, username) VALUES (#{email}, #{password}, #{username})
    </insert>

    <delete id="delete" parameterType="long">
        DELETE from test_user WHERE id=#{id}
    </delete>

    <update id="update" parameterType="User">
        UPDATE test_user set username=#{username}, email=#{email}, password=#{password}
    </update>

    <select id="selectById" resultType="User" parameterType="long">
        SELECT * FROM test_user WHERE id=#{id}
    </select>


    <select id="selectUser" resultType="User" parameterType="long">
        SELECT * FROM test_user WHERE id = #{id}
    </select>
</mapper>